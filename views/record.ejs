<script>

    $(".btn").click(function () {
        var typename=$(".tiaojian").val();
        $.get("/record",function(data){
            $("#tbody").empty()
            var str="";
            var datas=data.result;
            console.log(datas);
            $.each(datas, function (i, n) {
                console.log(n);
                if(n.name==typename){
                    str="<tr class='shows '>" +
                        "<th class='comeday'>"+n.comeday+"</th>" +
                        "<th class='goday'>"+n.goday+"</th>" +
                        "<th class='name'>"+n.name+"</th>" +
                        "<th class='rename'>"+n.rename+"</th>" +
                        "<th class='zhengjianhao'>"+n.zhengjianhao+"</th>" +
                        "<th class='sex'>"+n.sex+"</th>" +
                        "<th class='fanghao'>"+n.fanghao+"</th>" +
                        "<th class='leixing'>"+n.leixing+"</th>" +
                        "<th class='zhuangtai'>"+n.zhuangtai+"</th>" +
                        "<th class='xiaofei'>"+n.xiaofei+"</th>" +
                        "</tr>";
                    $("#tbody").append(str);
                }
            })
        })
    })
</script>
