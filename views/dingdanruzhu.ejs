<script>

    //订单查询
    $(".cha").click(function () {
        var rename=$(".nr").val();
        $.get("/yudingchaxun",function(data){
            $(".xinxi").empty();
            var str="";
            var data=data.result;
            $.each(data, function (i, n) {
                if(n.rename==rename){
                    str= "<p>"+"入住日期:"+"<span class='comeday'>"+data[i].comeday+"</span></p>" +
                        "<p>"+"离店日期:"+"<span class='goday'>"+data[i].goday+"</span></p>" +
                        "<p>"+"房间类型:"+"<span class='leixing'>"+data[i].leixing+"</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;预订数量:"+"<span class='shuliang'>"+data[i].shuliang+"</span></p>" +
                        "<p>"+"入住人姓名:"+"<span class='name'>"+data[i].name+"</p>" +
                        "<p>"+"联系人:"+"<span class='rename'>"+data[i].rename+"</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;联系人电话:"+"<span class='phone'>"+data[i].phone+"</span></p>" +
                        "<p class='liuyan'>"+"留言:"+"<span class='comeday'>"+data[i].liuyan+"</p>"
                    $(".xinxi").append(str);
                }
            })
            var typename=$(".leixing").html();
            console.log(typename)
            $.get("/jiagef",function(data){
                var data=data.result;
                $.each(data, function (i, n) {
                    if(n.leixing==typename){
                        $(".jiage").html(data[i].jiage);
                        $(".shuliang").html(data[i].yushuliang)
                    }
                })
            })
            $.get("/fanghao",function(data){
                $(".fangjian").empty();
                var str="";
                var data=data.result;
                console.log(data);
                $.each(data, function (i, n) {
                    if(n.RCategory==typename&&n.RoomStatus=="未入住"){
                        str="<option>"+data[i].RID+"</option>";
                        $(".fangjian").append(str);
                    }
                })
            })
        })
    })

    //提交办理入住
    $(".tijiao").click(function () {
        var comeday=$(".comeday").html();
        var goday=$(".goday").html();
        var starttime= comeday.split("-")[2];
        var endtime  = goday.split("-")[2];
        var time=endtime-starttime;
        console.log(time)
        $.post("/ruzhu", {
            sid:$(".fangjian").val(),
            comeday: comeday,
            goday: goday,
            name: $(".name").html(),
            rename:$(".rename").html(),
            zhengjianhao: $(".haoma").val(),
            sex: $(".sex").val(),
            fanghao: $(".fangjian").val(),
            leixing: $(".leixing").html(),
            zhuangtai:"已入住",
            xiaofei: $(".jiage").html()*time,
            zjleixing:$(".zhengjian").val(),
            riqi:$(".comeday").html(),
            jiage:$(".jiage").html(),
            yushuliang:$(".shuliang").html(),
        }, function (data) {
            if (data.result == 1) {
                alert("提交成功！");
                window.location.href = '/dingdianruzhu';
            } else if (data.result == -1) {
                alert("提交失败,被占用！");
            } else if (data.result == -2) {
                alert("服务器错误！请联系管理员，怎么联系我也不知道！");
            }
        })
    });
    $(".tijiao").click(function () {
        var sid=$(".fangjian").val();
        console.log(sid);
        var zhuangtai="已入住";
        console.log(zhuangtai);
